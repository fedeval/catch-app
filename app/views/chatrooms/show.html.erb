<div class = "chat" >
  <% if policy(Chatroom).show? %>
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <%= render 'messages/message', message: message %>
      <% end %>
    </div>
  <% end %>

  <div class ="content">
    <%= simple_form_for [ @chatroom, @message ], html: {id: "message_form"}, remote: true do |f| %>
      <%= f.input :content, label: false, autofocus: true, placeholder: "Message ##{@chatroom.name}" %>
    <% end %>
  </div>
</div>

<script>
const form = document.getElementById("message_form")
console.log(form);
form.addEventListener("submit", (event) => {
  event.preventDefault()
  form.submit()
  form.reset ()
  })
  </script>