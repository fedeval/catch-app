          </div>
        </div>
      </div>
      <div class="dashboard-bookings">
        <div class="confirmed-calls">
          <h3>My upcoming calls:</h3>
          <ul>
            <% @bookings.each do |booking| %>
              <% unless booking.user_two.nil? %>
                <li>
                  <%= booking.user_one.username %> - <%= booking.start_time.hour %>:<%= booking.start_time.min %>
                  <%= button_to "Start a video chat", video_rooms_path, params: {user_one: booking.user_one, user_two: booking.user_two }, class: 'btn btn-success' %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
        <div class="unconfirmed-calls">
          <p>Slots awaiting for confirmation:</p>
            <ul>
              <% @bookings.each do |booking| %>
                <% unless !booking.user_two.nil? %>
                  <li><%= booking.user_one.username %> - <%= booking.start_time.hour %>:<%= booking.start_time.min %></li>
                <% end %>
              <% end %>
            </ul>
        </div>
      </div>
      <div class="dashboard-contacts">
        <h3>My favourite contacts:</h3>
