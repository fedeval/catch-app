<div class="wrapper">

  <div class="bookings-matches" style="margin-right: 50px;">
    <h2>Get instantly matched!</h2>
    <% @bookings.each do |booking| %>
      
      <% unless booking.user_one == current_user || booking.user_two == current_user %>
        <% if (booking.start_hour == Time.now.hour && booking.start_minutes > Time.now.min) || (booking.start_hour > Time.now.hour && booking.start_hour < (Time.now.hour + 3)) %>
        
          <%= button_to "#{booking.start_hour}:#{booking.start_minutes}", booking_path(booking), method: :patch, class: 'booking-btn' %>
        <% end %>
        
      <% end %>
    <% end %>
  </div>

  <div class="bookings-form">
    <h2>Choose a new slot:</h2>
    <%= form_tag(bookings_path, method: :post) do %>
      <%= text_field_tag 'timepicker', nil, data: {current_hour: Time.now.hour, current_minutes: Time.now.min }, style: "width: 100%;" %>
      <%= submit_tag "Create a booking", class: 'booking-btn' %>
    <% end %>
  </div>
</div>